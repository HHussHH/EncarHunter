{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ESNext",
    "noUnusedLocals": false,
    "useDefineForClassFields": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["/src/shared_6/assets/*"],
      "ymaps3": ["./node_modules/@yandex/ymaps3-types"],
      "@yandex/ymaps3-default-ui-theme": ["node_modules/@yandex/ymaps3-default-ui-theme"]
    },
    "typeRoots": ["./node_modules/@types", "./node_modules/@yandex/ymaps3-types"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

  },
  "include": ["src"]
}
